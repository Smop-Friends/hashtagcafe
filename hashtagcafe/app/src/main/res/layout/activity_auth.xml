<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".authentication.AuthActivity"
    android:background="@color/cafe_yellow">

    <Button
        android:id="@+id/firebaseui"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="로그인"
        android:drawablePadding="4dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:background="@drawable/btn_darkbackground"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/firebasesignout"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="로그아웃"
        android:drawablePadding="4dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:background="@drawable/btn_darkbackground"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/firebaseui"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/toMapBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:text="시작하기"
        android:drawablePadding="4dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:background="@drawable/btn_darkbackground"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/firebasesignout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>