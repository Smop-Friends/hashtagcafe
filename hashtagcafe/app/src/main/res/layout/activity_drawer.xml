<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="280dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="end"
    android:id="@+id/drawerView"
    android:orientation="vertical"
    android:background="@color/cafe_yellow">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/cafe_yellow">

        <ImageView
            android:id="@+id/logotitle"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_alignParentLeft="true"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/titlelogoimg" />

        <ImageView
            android:id="@+id/subtitle"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/logotitle"
            android:layout_alignParentLeft="true"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/subtitleimg" />
      <!--  <LinearLayout
            android:id="@+id/partition1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/subtitle"
            android:layout_marginTop="20dp"
            android:background="#968C83"
            android:orientation="vertical" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="리뷰 등록하기"
            android:textSize="20dp"
            android:textAlignment="textStart"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/writeReview"
            android:layout_below="@+id/partition1"
            android:layout_alignParentLeft="true"
            android:gravity="center_horizontal"
            tools:ignore="RtlCompat" /> -->
        <LinearLayout
            android:id="@+id/partition2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/subtitle"
            android:layout_marginTop="20dp"
            android:background="#968C83"
            android:orientation="vertical" />

        <!--jenny-->
        <TextView
            android:id="@+id/BtnExplore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="해시태그 검색하기"
            android:textSize="20dp"
            android:textAlignment="textStart"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/partition2"
            android:layout_alignParentLeft="true"
            android:gravity="center_horizontal"
            tools:ignore="RtlCompat" />

        <LinearLayout
            android:id="@+id/partition3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/BtnExplore"
            android:layout_marginTop="20dp"
            android:background="#968C83"
            android:orientation="vertical" />
        <TextView
            android:id="@+id/addstore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="카페 추가하기"
            android:textSize="20dp"
            android:textAlignment="textStart"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/partition3"
            android:layout_alignParentLeft="true"
            android:gravity="center_horizontal"
            tools:ignore="RtlCompat" />

        <LinearLayout
            android:id="@+id/partition4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/addstore"
            android:layout_marginTop="20dp"
            android:background="#968C83"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/copyright"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="right"
            android:layout_marginRight="10dp"
            android:text="ⓒ스모프와 친구들"
            android:textColor="#968C83" />

    </RelativeLayout>
    //android:onClinck="OnClinck"

</LinearLayout>