<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFAF0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/border_layout"
        android:padding="15dp"
        android:layout_margin="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cafeName_Info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="카페 이름"
                android:padding="25dp"
                android:layout_gravity="center"
                android:gravity="left"
                android:textColor="@color/black"
                android:textSize="40sp"
                android:layout_weight="3"/>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1">

                <Button
                    android:id="@+id/modify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="4dp"
                    android:text="수정하기"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:background="@drawable/btn_darkbackground"
                    android:textColor="@color/white"
                    android:layout_margin="20dp"
                    />

            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/introduce_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#896D63"
            android:text=" &quot; 아직 카페 한 줄 소개가 \n입력되어있지 않아요 &quot;"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="5dp"
            >

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="위치"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="카페 위치"
                android:padding="14dp"
                android:textSize="25sp"
                android:layout_weight="7"
                />

            <ImageButton
                android:id="@+id/map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:src ="@android:drawable/ic_menu_mapmode"
                android:text="지도"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lay1"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:visibility="gone">

            <fragment android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:id="@+id/map_s"
                android:name="com.naver.maps.map.MapFragment" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="영업시간"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="영업시간"
                android:layout_weight="7"
                android:textSize="25sp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="left"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="메뉴"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:textSize="30sp"/>
            <TextView
                android:id="@+id/menu_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_box"
                android:padding="15dp"
                android:text="메뉴와 가격"
                android:textSize="20sp"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="매장 사진"/>
        </LinearLayout>
         <HorizontalScrollView
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
             <LinearLayout
                 android:id="@+id/imgLayout2"
                 android:layout_width="match_parent"
                 android:layout_height="150dp"
                 android:layout_gravity="center"
                 android:gravity="center"
                 app:layout_constraintTop_toBottomOf="@id/getimgbtn"
                 android:background="@color/cafe_gray"
                 android:orientation="horizontal" />
         </HorizontalScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="left"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="check"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:textSize="30sp"
                />
            <TextView
                android:id="@+id/check_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:text=""
                android:textSize="20sp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/review"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="리뷰"
                    android:layout_gravity="left"
                    android:layout_weight="5"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    />
                <Button
                    android:id="@+id/addReview"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:background="@drawable/btn_darkbackground"
                    android:text="리뷰추가"
                    android:textSize="17sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginRight="15dp"

                    />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_main_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>

    </LinearLayout>
</ScrollView>