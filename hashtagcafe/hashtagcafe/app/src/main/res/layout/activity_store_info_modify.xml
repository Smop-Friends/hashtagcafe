<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="카페 등록 / 수정하기"
            android:layout_gravity="center"
            android:gravity="left"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_marginBottom="20dp"
            android:layout_weight="3"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            >

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="카페이름"
                android:layout_gravity="center"
                android:gravity="left"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_weight="1"/>

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:hint="카페이름 작성"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="10dp"
            >

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="카페 위치"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_weight="1"
                />
            <EditText
                android:id="@+id/location"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="카페 위치 작성"
                android:layout_weight="5"
                />
            <Button
                android:id="@+id/mapPlus"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:drawablePadding="4dp"
                android:text="지도에서 검색"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="영업시간"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_weight="1"
                />
            <EditText
                android:id="@+id/addTime"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="영업시간 작성-클릭하면 시계 띄우기"
                android:layout_weight="5"
                android:textSize="20sp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/menuImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="left"
            android:layout_margin="10dp">
            <TextView

                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="메뉴판 작성하기"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:textSize="30sp"
                />
            <EditText

                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:hint="메뉴,가격 작성하기"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:textSize="30sp"
                />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="메뉴판 사진 등록하기"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:textSize="30sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/menu"
                    />
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/menu"
                    />

                <Button
                    android:id="@+id/menuImgPlus"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:drawablePadding="4dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:gravity="right"
                    android:text="더보기"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/cafeImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="left"
            android:layout_margin="10dp">
            <TextView

                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="카페 사진 등록하기"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:textSize="30sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/menu"
                    />
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/menu"
                    />
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/menu"
                    />
                <Button
                    android:id="@+id/imgPlus"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:drawablePadding="4dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:gravity="right"
                    android:text="더보기"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="left"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="해쉬태그 내용자리"

                android:textSize="30sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="left"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="체크리스트 내용자리"

                android:textSize="30sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="left"
            android:layout_margin="10dp"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="한 줄 소개 작성하기"
                android:textColor="@color/black"
                android:layout_gravity="left"
                android:gravity="center"
                android:textSize="30sp"
                android:layout_weight="1"
                />
            <EditText
                android:id="@+id/introduce"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:hint="한 줄 소개 작성"
                android:layout_marginTop="10dp"

                android:layout_gravity="top"
                android:gravity="top"
                android:layout_weight="5"
                android:textSize="25sp"
                />
        </LinearLayout>

    </LinearLayout>

</ScrollView>